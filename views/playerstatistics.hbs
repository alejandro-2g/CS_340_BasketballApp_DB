<h1>Player Statistics</h1>
<table>
  <thead>
    <tr>
      <th>Player ID</th>
      <th>Statistic ID</th>
      <th>Game ID</th>
      <th>Value</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each playerstatistics}}
    <tr>
      <td>{{this.PlayerID}}</td>
      <td>{{this.StatisticID}}</td>
      <td>{{this.GameID}}</td>
      <td>{{this.ValueOfStatistic}}</td>
      <td class="snug">
        <form method="POST" action="/statistics/delete">
          <input type="hidden" name="StatisticID" value="{{this.StatisticID}}" />
          <button type="submit">Delete</button>
        </form>
	  </td>
      <td class="snug">
        <form method="POST" action="/statistics/update">
          <input type="hidden" name="StatisticID" value="{{this.StatisticID}}" />
          <button type="submit">Update</button>
		</form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h2>Add Player Statistic</h2>
<form method="POST" action="/playerstats/add">
  <input name="PlayerID" placeholder="Player ID" required />
  <input name="StatisticID" placeholder="Statistic ID" required />
  <input name="GameID" placeholder="Game ID" required />
  <input name="ValueOfStatistic" placeholder="Value" required />
  <button type="submit">Add Stat</button>
</form>
