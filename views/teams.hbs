<h1>Teams</h1>
<table>
  <thead>
    <tr>
      <th>Team Name</th>
      <th>Coach Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each teams}}
    <tr>
      <td>{{this.TeamName}}</td>
      <td>{{this.CoachName}}</td>
      <td class="snug">
        <form method="POST" action="/teams/delete">
          <input type="hidden" name="TeamID" value="{{this.TeamID}}" />
          <button type="submit">Delete</button>
        </form>
	  </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h2>Add New Team</h2>
<!-- Instruction box -->
<div style="max-width: 500px; margin-bottom: 16px; padding: 12px; border: 1px solid #ccc; background: #f9f9f9;">
  <h4 style="margin-top: 0;">Instructions</h4>
  <ul style="margin: 0; padding-left: 18px;">
    <li>Team Name is required.</li>
    <li>Coach Name is optional.</li>
    <li>Click “Add Team” to insert the new record.</li>
  </ul>
</div>

<div style="display: flex; gap: 32px; align-items: flex-start;">
  <!-- Add Team Form -->
  <form method="POST" action="/teams/add">
    <input name="TeamName" placeholder="Team Name" required />
    <input name="CoachName" placeholder="Coach Name" />
    <button type="submit">Add Team</button>
  </form>


</div>
<!-- Update team form --> 
<h2>Update a Team</h2>
<form method="POST" action="/teams/update">
  <label for="TeamSelect">Select a team</label>
  <select name="TeamID" id="TeamSelect" required>
  {{#each teams}}
    <option value="{{this.TeamID}}">{{this.TeamName}}</option>
  {{/each}}
  </select>
  <input name="TeamName" placeholder="New Team Name" required />
  <input name="CoachName" placeholder="New Coach Name" />
  <button type="submit">Update Team</button>
</form>

